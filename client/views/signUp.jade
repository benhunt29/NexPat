div(layout-margin layout-padding layout-align = "center center")
    div(layout="row" layout-sm="column" layout-align="center center")
        h1.md-display-3 Are you next?
    div(layout-padding)
        form(name="signUp" ng-submit="register()")
            div(layout="row" layout-sm="column" layout-align="center center")
                md-input-container(flex)
                    label Email Address
                    input(type = "email" name="email" ng-model="form.email" required)
                div(ng-messages="signUp.email.$error")
                    div(ng-message="required")
                md-input-container(flex)
                    label Username
                    input(type="text" name="username" ng-model="form.userName" required)
                    div(ng-messages="signUp.username.$error")
                        div(ng-message="minlength") Required!
            div(layout="row" layout-sm="column" layout-align="center center")
                md-input-container
                    label Password
                    input(type="password" name="password" ng-model="form.password" required ng-minlength="6")
                    div(ng-messages="signUp.password.$error" style="color:maroon" role="alert")
                        div(ng-message="minlength") Must be >5 characters
                md-input-container
                    label Confirm Password
                    input(type="password" name="passwordConfirm" ng-model="form.passwordConfirm" required data-match="signUp.password")
                    div(ng-messages="signUp.passwordConfirm.$error" style="color:maroon" role="alert")
                        div(ng-message="match") passwords must match!
            div(layout="row" layout-sm="column" layout-align="center center")
                md-input-container
                    label First Name
                    input(type="text" name="firstName" ng-model="form.firstName" required)
                md-input-container
                    label Last Name
                    input(type="text" name="lastName" ng-model="form.lastName" required)
            div(layout="row" layout-sm="column" layout-align="center center")
                input.md-button.md-primary.md-raised(type="submit" layout-fill value="Register" ng-disabled="signUp.$invalid")
            div(ng-show="error") {{error}}
